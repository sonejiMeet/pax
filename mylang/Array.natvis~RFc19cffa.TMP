<?xml version="1.0" encoding="utf-8"?>
<AutoVisualizer xmlns="http://schemas.microsoft.com/vstudio/debugger/natvis/2010">

    <!-- Visualizer for Array<T*> -->
    <Type Name="Array&lt;*&gt;">
        <DisplayString>Array[{count}]</DisplayString>
        <Expand>
            <Item Name="size">count</Item>
            <Item Name="capacity">capacity</Item>
            <ArrayItems>
                <Size>count</Size>
                <ValuePointer>data</ValuePointer>
            </ArrayItems>
        </Expand>
    </Type>

    <!-- Visualizer for Ast_Statement* -->
    <Type Name="Ast_Statement">
        <!-- Display these two fields directly in the watch window -->
        <DisplayString>line={line_number}, char={character_number}</DisplayString>
        <Expand>
            <Item Name="Line">line_number</Item>
            <Item Name="Character">character_number</Item>
            <!-- Optionally expand base or other members -->
            <ExpandedItem>this</ExpandedItem>
        </Expand>
    </Type>

</AutoVisualizer>
